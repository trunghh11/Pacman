{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "run pacman game",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++17",
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/play",
                "-I../include/SDL2",
                "-L../lib",
                "-lsdl2",
                "-lsdl2_image",
                "-lsdl2_mixer",
                "-lsdl2_ttf"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}